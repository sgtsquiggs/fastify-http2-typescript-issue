{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"moduleResolution": "Node",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"outDir": "dist",
		"allowJs": false,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": false
	},
	"include": ["src"],
	"exclude": ["node_modules", "dist"]
}
